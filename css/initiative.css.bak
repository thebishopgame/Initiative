body {
    font-family: Verdana, Arial, Sans-Serif;
    background-color: #888888;
    font-size: 2em;
}

#main {
    width: 700px;
    margin: 0 auto;
    text-align: center;
}

ol {
    list-style-type: none;
    position: relative;
    list-style-position: outside;
    margin: 0px auto;
    padding: 0;
}

ol li {
    position: relative;
    background: #eeeeee;
    border-radius: 10px;
    border: 2px solid black;
    margin: 0px auto;
    margin-top: 6px;
    margin-bottom: 6px;
    padding: 0.4em;
    width: 640px;
    height: 30px;
    font-family: Verdana, Arial, Sans-Serif;
    vertical-align: middle;
}

ol .active {
    background: #F39814; color: white;
}

button {
    font-size: .75em;
    vertical-align: middle;
    position: relative;
    top: -2px;
}

.initdex {
    float: right;
    position: relative;
    top: +2px;
    /*display: inline;*/
}

.charControls {
    float: right;
}

#addChar {
    display: inline-block;
    font-family: Verdana, Arial, Sans-Serif;
    background: #F0F0F0;
    border-radius: 10px;
    border: 2px solid black;
    margin: 6px;
    margin-bottom: 7px;
    padding: 0;
    font-size: 1em;
    width: 520px;
}

.inputLabel {
    position: absolute;
    font-size: 50%;
    top: -8px;
    margin: auto;
}

input[type=number] {
    width: 35px;
    height: 20px;
    padding: 0;
    margin: 0;
    font-size: .5em;
}

input[type=text] {
    height: 25px;
    padding: 0;
    margin: 0;
    font-size: .6em;
    vertical-align: middle;
    position: relative;
    top: -2px;
}

.init,.dex {
    position: relative;
    left: -4px;
}

